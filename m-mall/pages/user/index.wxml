<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{ userInfo.avatar }}" background-size="cover"></image>
    <text class="userinfo-nickname">{{ userInfo.nickname }}</text>
    <text class="userinfo-tel" hidden="{{ ismobiled }}">{{ mobiled }}</text>
  </view>
  <view class="info_list">
    <view class="weui-cells">
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active"  wx:for="{{ items }}" wx:key="" data-path="{{ item.path }}" data-index="{{ index }}" bindtap="navigateTo">
        <view class="weui-cell__hd">
          <image src="{{ item.icon }}" style="margin-bottom: 2px;margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">{{ item.text }}</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">
          <text wx:if="{{ index === 3 }}">{{ service_phone }}</text>
          <text wx:if="{{ index === 1 }}">{{ userInfo.code }}</text>
        </view>
        
        <button class="button-contact" wx:if="{{ index === 4 }}" open-type="contact"></button>
      </view>
      
    </view>
  </view>
  <view class="logout" hidden="{{ismobiled}}" bindtap="unbind">解绑手机号</view>
</view>
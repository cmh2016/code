.price {
  font-weight: normal;
  color: #ec5e15;
}

.shop-list-top {
  height:8vh;
  line-height:8vh;
padding-left:10px;
  width: 750rpx;
  background: #fff;
  border-bottom: 1px solid #ccc;
}
.weui-cell::before{
    border: none;
}
checkbox-group wx-label, wx-radio-group wx-label {
height: 15px!important;
}
.weui-icon-radio {
    position: relative;
    top: 8px;
}
.shop-list-box {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.shop-list-type {
  width: 185rpx;
  height: 7vh;
  margin-top: 0.5vh;
  float: left;
  border-right: 1px solid #ccc;
  font-size: 12px;
  color: #666;
  text-align: center;
  line-height:7vh;
  position: relative;
}

.shop-list-type::after {
  position: absolute;
  top: 50%;
  right: 5px;
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: rotate(135deg) translateY(5px) scale(.5,.5);
}

.shop-list-type:last-child {
  border: none;
}

.shop-list-shoadw {
  position: fixed;
  width: 100vw;
  height: 93vh;
  z-index: 99;
  left: 0;
  top:8.2vh;
  background: rgba(0, 0, 0, 0.5);
}
.shoadw-top{
  width: 750rpx;
  background: #fff;
  position: relative;
  z-index: 999;

}
.shoadw-top-type{
  max-height: 50vh;
  width: 750rpx;
    margin-bottom: 10px;
}
.shop-list-btn{
  width: 300rpx;
  float: left;
  margin-left: 10px;
  height: 30px;
  line-height: 30px;
}
.shop-list-btn:last-child{
  float: right;
   margin-right: 10px;
}
.shoadw-top-type-item{
    width: 750rpx;
    height: 30px;
    line-height: 30px;
    border-bottom: 1px solid #eee;
    font-size: 12px;
    text-indent: 1rem;
}
.shoadw-top-type-item .yes{
    color: #D62156;
    float: right;
    margin-right: 20px;
}
.shoadw-top-type-item .no{
    display: none;
}
